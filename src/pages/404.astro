---
import Link from "../components/Link.astro"
import MainLayout from "../layouts/MainLayout.astro"

const title = "404 | NotFound"
const description = "Page you are looking for cannot be found"
---

<MainLayout {title} {description}>
  <section
    class="container"
    aria-label="Not Found"
    style={{
      display: "grid",
      placeItems: "center",
      textAlign: "center",
      gap: "var(--space-sm)",
    }}
  >
    <div>
      <h1 class="h1">Welp, this is awkward!</h1>
      <p>We seem to have misplaced something</p>
    </div>
    <Link
      href="/"
      style="secondary"
      text="Go Home"
      icon={{ name: "tabler:home", side: "right" }}
    />
  </section>
</MainLayout>
