---
// components
import HeadLayout from "./HeadLayout.astro"
import Footer from "../components/Footer.astro"

// Styles
import "../styles/global.css"
import Nav from "../components/Nav.astro"

// props
const { title, description, image, post, robots } = Astro.props
---

<html lang="en">
  <HeadLayout {title} {description} {image} {post} {robots} />
  <body transition:animate="none">
    <Nav />

    <main transition:animate="fade">
      <slot />
    </main>
    <Footer />
  </body>
</html>
